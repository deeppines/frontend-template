{
    //Yandex style guide for eslint.
    //See full yandex description https://github.com/yandex/codestyle/.

    "env": {
        "browser": true,
        "jquery": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "linebreak-style": [
            2,
            "unix"
        ],
        "eol-last": [
            2
        ],
        "no-trailing-spaces": [
            2
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-mixed-spaces-and-tabs": [
            2
        ],
        "no-multiple-empty-lines": [
            2,
            {
                "max": 2
            }
        ],
        "max-len": [
            2,
            120,
            4
        ],
        "camelcase": [
            2
        ],
        "new-cap": [
            2,
            {
                "newIsCap": true,
                "capIsNew": true
            }
        ],
        "new-parens": [
            2
        ],
        "one-var": [
            2,
            "never"
        ],
        "vars-on-top": [
            2
        ],
        "no-shadow": [
            2
        ],
        "object-curly-spacing": [
            2,
            "never"
        ],
        "array-bracket-spacing": [
            2,
            "never"
        ],
        "key-spacing": [
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-extra-semi": [
            2
        ],
        "semi-spacing": [
            2
        ],
        "comma-style": [
            2,
            "last"
        ],
        "no-spaced-func": [
            2
        ],
        "space-before-function-paren": [
            2,
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "keyword-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "space-in-parens": [
            2,
            "never"
        ],
        "no-multi-spaces": [
            2
        ],
        "operator-linebreak": [
            2,
            "after"
        ],
        "curly": [
            2
        ],
        "brace-style": [
            2
        ],
        "space-before-blocks": [
            2,
            "always"
        ],
        "no-cond-assign": [
            2
        ],
        "yoda": [
            2,
            "never"
        ],
        "no-duplicate-case": [
            2
        ],
        "no-inner-declarations": [
            2,
            "both"
        ],
        "no-unreachable": [
            2
        ],
        "no-redeclare": [
            2,
            {
                "builtinGlobals": false
            }
        ],
        "no-with": [
            2
        ],
        "eqeqeq": [
            2
        ],
        "no-unneeded-ternary": [
            2
        ],
        "space-unary-ops": [
            2,
            {
                "words": true,
                "nonwords": false
            }
        ],
        "no-eval": [
            2
        ],
        "no-throw-literal": [
            2
        ],
        "valid-typeof": [
            2
        ],
        "no-implicit-coercion": [
            2,
            {
                "boolean": true,
                "number": true,
                "string": true
            }
        ],
        "no-multi-str": [
            2
        ],
        "spaced-comment": [
            2,
            "always"
        ]
    }
}
